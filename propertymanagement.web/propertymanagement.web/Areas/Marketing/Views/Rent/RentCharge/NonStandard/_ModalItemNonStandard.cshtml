<div class="modal fade" id="modalItemNonStandard" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close" id="iconClose" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Item Non Standard</h4>
                <br />
            </div>
            <div id="gridDetail" class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-md-5 control-label">Date From</label>
                            <div class="col-md-7">
                                <input type="date" id="PeriodFrom" name="PeriodFrom" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-5 control-label">Date Until</label>
                            <div class="col-md-7">
                                <input type="date" id="PeriodTo" name="PeriodTo" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-5 control-label">Description</label>
                            <div class="col-md-7">
                                <input type="text" id="FormDescription" name="FormDescription" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-5 control-label">Monthly Basic Charge (Exc)</label>
                            <div class="col-md-7">
                                <input type="number" id="BasicAmount" name="BasicAmount" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-5 control-label">Additional Charge</label>
                            <div class="col-md-7">
                                <input type="number" id="AdditionalAmount" name="AdditionalAmount" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-5 control-label">Monthly Charge</label>
                            <div class="col-md-7">
                                <input type="number" id="ChargeAmount" name="ChargeAmount" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-5 control-label">Annual Charge (Exc)</label>
                            <div class="col-md-7">
                                <input type="number" id="ChargeAmountInPeriod" name="ChargeAmountInPeriod" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-5 control-label">Monthly Charge (Inc)</label>
                            <div class="col-md-7">
                                <input type="number" id="BasicAmountInc" name="BasicAmountInc" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-5 control-label">Annual Charge (Inc)</label>
                            <div class="col-md-7">
                                <input type="number" id="ChargeAmountInPeriodInc" name="ChargeAmountInPeriodInc" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group text-right">
                            <button class="btn btn-primary" id="save_item">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/jsfile/RentAmount/AddEdit.js"></script>
    <script type="text/javascript" src="~/js/jsfile/functions.js?v1.0"></script>
}
