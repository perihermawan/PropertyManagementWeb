<div class="modal fade" id="modalEditTelp" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog modal-md" style="width:350px;">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close" id="iconClose" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Add New Telp No</h4>
                <br />
            </div>
             <div class="modal-body">
                <div class="form-group row">
                    <label class="col-md-4 control-label">Map Number</label>
                    <div class="col-md-8">
                        <select class="form-control" name="editTelpLocation" id="editTelpLocation" style="display: inline;">
                            <option>-- Please Select --</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 control-label">Telp Number</label>
                    <div class="col-md-8">
                        <input type="text" name="editTelpNo" id="editTelpNo" class="form-control" style="padding-left:0px; padding-right:0px" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 control-label">Telp Status</label>
                    <div class="col-md-8">
                        <select class="form-control" name="editTelpStatus" id="editTelpStatus" style="display: inline;">
                            <option>-- Please Select --</option>
                            <option value="1">Active</option>
                            <option value="0">Non Active</option>
                            <option value="2">Original</option>
                        </select>
                    </div>
                </div>

            </div>
            <div class="model-footer" style="margin:20px!important; text-align:end!important">
                <button type="button" class="btn btn-primary" id="saveEditTelp" onclick="saveEditTelp()">Save</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section Scripts{
    <script type="text/javascript" src="~/js/jsfile/User/ModalEmployeeIndex.js?v1.1"></script>
}
