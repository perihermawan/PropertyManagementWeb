@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using propertymanagement.web.Areas.Master.Models.DTO;
@model propertymanagement.web.Models.ViewModels.TenantOwnerDetailViewModel;
@{
    var tenantowner = Model != null ? Model : null;
    var action = ViewBag.Action;
    var tenantownertypeid = "";

}

<style type="text/css">
    .req:after {
        content: " *";
        color: red;
    }

    .col-no-padding {
        padding: 0px;
    }

    .line-separator-1 {
        width: 100%;
        margin: 5px 0px 15px;
        border: 1px solid #bababa3d;
    }
</style>

<div class="m-subheader">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item">
                    <a asp-action="Index" asp-controller="TenantOwner" class="m-nav__link">
                        <span class="m-nav__link-text">Tenant & Owner</span>
                    </a>
                </li>
                <li class="m-nav__item m-nav__separator"><i class="fa fa-angle-double-right"></i></li>
                <li class="m-nav__item">
                    <a href="javascript:return;" class="m-nav__link">
                        <span class="m-nav__link-text">Create</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="panel panel-primary" style="margin-bottom:0px">
    <div class="panel-heading">
        <h3 class="panel-title">Master Tenant Owner</h3>
    </div>
</div>
<div class="m-content" style="padding-left:20px; padding-right:20px">
    <div class="row">
        <div class="col-xs-12 col-md-12 box-content" style="padding-top: 15px;">
            <div class="portlet-body">
                <div class="box-body no-padding">
                    @{
                        var route = "/Master/TenantOwner/OnCreate";
                    }
                    <form id="form-unit" action="@route" data-title-action="edit" method="post" onsubmit="return handleSubmit(this, submitData)">
                        <input type="hidden" name="id" value="" />
                        <div class="col-xs-12 col-md-12 col-no-padding">
                            <div class="col-xs-12 col-md-6 col-no-padding" style="padding-right: 7px;">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Tenant & Owner</h3>
                                    </div>
                                    <div class="panel-body tenantOwner">
                                        <div class="form-group">
                                            <label class="type" for="type">Type</label>
                                            <select name="type" id="type" value="" class="form-control selectpicker" data-size="1" data-live-search="true" data-trigger="focus" data-toggle="popover" data-placement="bottom" data-html="true" required></select>
                                        </div>
                                        <div class="form-group">
                                            <label class="name" for="name">Name</label>
                                            <input type="text" class="form-control" name="name" id="name" placeholder="Name" value="" required />
                                        </div>
                                        <div class="form-group">
                                            <label class="address" for="address">Address</label>
                                            <input type="text" cols="3" class="form-control" name="address" id="address" placeholder="Address" value="" required />
                                        </div>
                                        <div class="form-group">
                                            <label class="city" for="city">City</label>
                                            <input type="text" class="form-control" name="city" id="city" placeholder="City" value="" required />
                                        </div>
                                        <div class="form-group">
                                            <label class="zipCode" for="zipCode">Zip Code</label>
                                            <input type="number" class="form-control" name="zipCode" id="zipCode" placeholder="Zip Code" value="" />
                                        </div>
                                        <div class="form-group">
                                            <label class="homePhone" for="homePhone">Home Phone</label>
                                            <input type="text" class="form-control" name="homePhone" id="homePhone" placeholder="Home Phone" value="" />
                                        </div>
                                        <div class="form-group">
                                            <label class="officePhone" for="OfficePhone">Office Phone</label>
                                            <input type="text" class="form-control" name="officePhone" id="officePhone" placeholder="Office Phone" value="" />
                                        </div>
                                        <div class="form-group">
                                            <label class="handPhone" for="handPhone">Hp</label>
                                            <input type="text" class="form-control" name="handPhone" id="handPhone" placeholder="HP" value="" />
                                        </div>
                                        <div class="form-group">
                                            <label class="fax" for="fax">Fax</label>
                                            <input type="text" class="form-control" name="fax" id="fax" placeholder="Fax" value="" />
                                        </div>
                                        <div class="form-group">
                                            <label class="email" for="email">E-mail</label>
                                            <input type="email" class="form-control" name="email" id="email" placeholder="E-mail" value="" />
                                        </div>
                                        <div class="form-group">
                                            <label class="tenantOwnerTypeDesc" for="tenantOwnerType">Category</label>
                                            <select name="tenantOwnerType" id="tenantOwnerType" value="" class="form-control selectpicker" data-size="1" data-live-search="true" data-trigger="focus" data-toggle="popover" data-placement="bottom" data-html="true" required></select>
                                        </div>
                                        <div class="form-group">
                                            <label class="idCardTypeDesc" for="idCardType">ID Card</label>
                                            <select name="idCardType" id="idCardType" value="" class="form-control selectpicker" data-size="1" data-live-search="true" data-trigger="focus" data-toggle="popover" data-placement="bottom" data-html="true" required></select>
                                        </div>
                                        <div class="form-group">
                                            <label class="idCardNumber" for="idCardNumber">ID Card No.</label>
                                            <input type="number" class="form-control" name="idCardNumber" id="idCardNumber" placeholder="ID Card No." value="" />
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Person In Charge</h3>
                                    </div>
                                    <div class="panel-body pic">
                                        <div class="form-group">
                                            <label for="picName">Name</label>
                                            <input type="text" class="form-control" name="picName" id="picName" placeholder="Name" value="" required />
                                        </div>
                                        <div class="form-group">
                                            <label for="picAddress">Address</label>
                                            <input type="text" class="form-control" name="picAddress" id="picAddress" placeholder="Address" value="" required />
                                        </div>
                                        <div class="form-group">
                                            <label for="picCity">City</label>
                                            <input type="text" cols="3" class="form-control" name="picCity" id="picCity" placeholder="City" value="" required />
                                        </div>
                                        <div class="form-group">
                                            <label for="picZipCode">Zip Code</label>
                                            <input type="number" class="form-control" name="picZipCode" id="picZipCode" placeholder="Zip Code" value="" />
                                        </div>
                                        <div class="form-group">
                                            <label for="picHomePhone">Home Phone</label>
                                            <input type="text" class="form-control" name="picHomePhone" id="picHomePhone" placeholder="Home Phone" value="" />
                                        </div>
                                        <div class="form-group">
                                            <label for="picOfficePhone">Office Phone</label>
                                            <input type="text" class="form-control" name="picOfficePhone" id="picOfficePhone" placeholder="Office Phone" value="" />
                                        </div>
                                        <div class="form-group">
                                            <label for="picHandphone">Handphone</label>
                                            <input type="text" class="form-control" name="picHandphone" id="picHandphone" placeholder="Handphone" value="" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6 col-no-padding" style="padding-left: 7px;">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Invoice To</h3>
                                    </div>
                                    <div class="panel-body invoiceTo">
                                        <div class="col-xs-12 col-md-12 utility-panel">
                                            <div class="col-xs-12 col-md-8 properties">
                                                <div class="form-group">
                                                    <label for="invName">Name</label>
                                                    <input type="text" class="form-control" name="invName" id="invName" placeholder="Name" value="" required />
                                                </div>
                                                <div class="form-group">
                                                    <label for="invAddress">Address</label>
                                                    <input type="text" class="form-control" name="invAddress" id="invAddress" placeholder="Address" value="" required />
                                                </div>
                                                <div class="form-group">
                                                    <label for="invCity">City</label>
                                                    <input type="text" cols="3" class="form-control" name="invCity" id="invCity" placeholder="City" value="" required />
                                                </div>
                                                <div class="form-group">
                                                    <label for="invZipCode">Zip Code</label>
                                                    <input type="number" class="form-control" name="invZipCode" id="invZipCode" placeholder="Zip Code" value="" />
                                                </div>
                                                <div class="form-group">
                                                    <label for="invHomePhone">Home Phone</label>
                                                    <input type="text" class="form-control" name="invHomePhone" id="invHomePhone" placeholder="Home Phone" value="" />
                                                </div>
                                                <div class="form-group">
                                                    <label for="invOfficePhone">Office Phone</label>
                                                    <input type="text" class="form-control" name="invOfficePhone" id="invOfficePhone" placeholder="Office Phone" value="" />
                                                </div>
                                                <div class="form-group">
                                                    <label for="invHandphone">Handphone</label>
                                                    <input type="text" class="form-control" name="invHandphone" id="invHandphone" placeholder="Handphone" value="" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">NPWP</h3>
                                    </div>
                                    <div class="panel-body tenantOwner">
                                        <div class="col-xs-12 col-md-12 utility-panel">
                                            <div class="col-xs-12 col-md-8 properties">
                                                <div class="form-group">
                                                    <label for="npwpNumber">Number</label>
                                                    <input type="number" class="form-control" name="npwpNumber" id="npwpNumber" placeholder="Number" value="" />
                                                </div>
                                                <div class="form-group">
                                                    <label for="npwpName">Name</label>
                                                    <input type="text" class="form-control" name="npwpName" id="npwpName" placeholder="Name" value="" required />
                                                </div>
                                                <div class="form-group">
                                                    <label for="npwpAddress">Address</label>
                                                    <input type="text" cols="3" class="form-control" name="npwpAddress" id="npwpAddress" placeholder="Address" value="" required />
                                                </div>
                                                <div class="form-group">
                                                    <label for="npwpCity">City</label>
                                                    <input type="text" class="form-control" name="npwpCity" id="npwpCity" placeholder="City" value="" required />
                                                </div>
                                                <div class="form-group">
                                                    <label for="npwpZipCode">Zip Code</label>
                                                    <input type="number" class="form-control" name="npwpZipCode" id="npwpZipCode" placeholder="Zip Code" value="" />
                                                </div>
                                                <div class="form-group">
                                                    <div class="checkbox">
                                                        <label for="npwpEarlyPaid">Pajak di muka AR</label>
                                                        <input type="checkbox" name="npwpEarlyPaid" id="npwpEarlyPaid" style="margin-left: 10px;" value="" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="checkbox">
                                                        <label for="npwpEarlyPaidCL">Pajak di muka Casual Leasing</label>
                                                        <input type="checkbox" name="npwpEarlyPaidCL" id="npwpEarlyPaidCL" style="margin-left: 10px;" value="" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Mail Address</h3>
                                    </div>
                                    <div class="panel-body correspondence">
                                        <div class="col-xs-12 col-md-12 utility-panel">
                                            <div class="col-xs-12 col-md-8 properties">
                                                <div class="form-group">
                                                    <label for="corrName">Name</label>
                                                    <input type="text" class="form-control" name="corrName" id="corrName" placeholder="Name" value="" required />
                                                </div>
                                                <div class="form-group">
                                                    <label for="corrAddress">Address</label>
                                                    <input type="text" cols="3" class="form-control" name="corrAddress" id="corrAddress" placeholder="Address" value="" required />
                                                </div>
                                                <div class="form-group">
                                                    <label for="corrCity">City</label>
                                                    <input type="text" class="form-control" name="corrCity" id="corrCity" placeholder="City" value="" required />
                                                </div>
                                                <div class="form-group">
                                                    <label for="corrZipCode">Zip Code</label>
                                                    <input type="number" class="form-control" name="corrZipCode" id="corrZipCode" placeholder="Zip Code" value="" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-12 col-no-padding" style="margin-bottom: 30px;">
                            <button type="submit" class="btn btn-success">Save</button>
                            <button type="button" class="btn btn-danger" onclick="backToList()">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/js/jsfile/TenantOwner/AddEdit.js"></script>
    <script type="text/javascript">
        var action = "@action";
        var tenantownertypeid = "";
        var type = "";
		var idcardtype = "";
        var tenantownercompid = "";
    </script>
}