@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model propertymanagement.web.Areas.Marketing.Models.ViewModel.DepositRentViewModel;
@{
    var deposit = Model != null ? Model : null;
    var action = "create";

}

<style type="text/css">
    .req:after {
        content: " *";
        color: red;
    }

    .col-no-padding {
        padding: 0px;
    }

    .line-separator-1 {
        width: 100%;
        margin: 5px 0px 15px;
        border: 1px solid #bababa3d;
    }
</style>

<div class="m-subheader">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                <li class="m-nav__item">
                    <a asp-action="Index" asp-controller="TenantOwner" class="m-nav__link">
                        <span class="m-nav__link-text">Marketing Deposit</span>
                    </a>
                </li>
                <li class="m-nav__item m-nav__separator"><i class="fa fa-angle-double-right"></i></li>
                <li class="m-nav__item">
                    <a href="javascript:return;" class="m-nav__link">
                        <span class="m-nav__link-text">Create</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="panel panel-primary" style="margin-bottom:0px">
    <div class="panel-heading">
        <h3 class="panel-title">Deposit</h3>
    </div>
</div>
<div class="m-content" style="padding-left:20px; padding-right:20px">
    <div class="row">
        <div class="col-xs-12 col-md-12 box-content" style="padding-top: 15px;">
            <div class="portlet-body">
                <div class="box-body">
                    @{
                        var route = "/Marketing/Deposit/OnCreate";
                    }
                    <form id="form-deposit" action="@route" data-title-action="create" method="post" onsubmit="return handleSubmit(this, submitData)">
                        <input type="hidden" id="RentId" value="" />
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group row" style="display: flex; align-items: stretch;">
                                    <label class="col-md-4 control-label text-right" style="height: 100%;">PSM Number</label>
                                    <div class="col-md-8">
                                        <div class="col-md-9" style="padding-left: 0px;">
                                            <input type="text" name="PsmNumber" id="PsmNumber" class="form-control" disabled>
                                        </div>
                                        <button type="button" onclick="showPsmPopup()" class="btn btn-secondary" style="height: 100%;"><i class="fa fa-search"></i></button>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group row">
                                    <label class="col-md-2 control-label text-right">Square</label>
                                    <div class="col-md-10">
                                        <div class="col-md-4" style="padding-left: 0px;">
                                            <input type="text" name="Square" id="Square" class="form-control" />
                                        </div>
                                        (m2)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group row" style="display: flex; align-items: stretch;">
                                    <label class="col-md-4 control-label text-right" style="height: 100%;">Location</label>
                                    <div class="col-md-8">
                                        <input type="text" name="Location" id="Location" class="form-control">
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group row">
                                    <label class="col-md-2 control-label text-right">PLN</label>
                                    <div class="col-md-10">
                                        <div class="col-md-4" style="padding-left: 0px;">
                                            <input type="text" name="PlnNode" id="PlnNode" class="form-control">
                                        </div>
                                        <div class="col-md-3" style="padding-left: 0px">
                                            (nodes) -- Total Power
                                        </div>
                                        <div class="col-md-4" style="padding-left: 0px">
                                            <input type="text" name="TotalPower" id="TotalPower" class="form-control col-md-4">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group row" style="display: flex; align-items: stretch;">
                                    <label class="col-md-4 control-label text-right" style="height: 100%;">Outlet Name</label>
                                    <div class="col-md-8">
                                        <input type="text" name="OutletName" id="OutletName" class="form-control">
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group row">
                                    <label class="col-md-2 control-label text-right">PAM</label>
                                    <div class="col-md-10">
                                        <div class="col-md-4" style="padding-left: 0px;">
                                            <input type="text" name="PamNode" id="PamNode" class="form-control">
                                        </div>
                                        <div class="col-md-4" style="padding-left: 0px">
                                            (nodes)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group row" style="display: flex; align-items: stretch;">
                                    <label class="col-md-4 control-label text-right" style="height: 100%;">Unit Owner</label>
                                    <div class="col-md-8">
                                        <input type="text" name="UnitOwner" id="UnitOwner" class="form-control">
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group row">
                                    <label class="col-md-2 control-label text-right">Gas</label>
                                    <div class="col-md-10">
                                        <div class="col-md-4" style="padding-left: 0px;">
                                            <input type="text" name="GasNode" id="GasNode" class="form-control">
                                        </div>
                                        <div class="col-md-4" style="padding-left: 0px">
                                            (nodes)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group row" style="display: flex; align-items: stretch;">
                                    <label class="col-md-4 control-label text-right" style="height: 100%;">Tenant Owner</label>
                                    <div class="col-md-8">
                                        <input type="text" name="TenantOwner" id="TenantOwner" class="form-control">
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group row">
                                    <label class="col-md-2 control-label text-right">Telp</label>
                                    <div class="col-md-10">
                                        <div class="col-md-4" style="padding-left: 0px;">
                                            <input type="text" name="TelpNode" id="TelpNode" class="form-control">
                                        </div>
                                        <div class="col-md-4" style="padding-left: 0px">
                                            (nodes)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group row" style="display: flex; align-items: stretch;">
                                    <label class="col-md-4 control-label text-right" style="height: 100%;"></label>
                                    <div class="col-md-8">
                                        <button type="button" id="BtnAddItem" class="btn btn-xs btn-primary">Add Item</button>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-8">

                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <table class="table table-bordered table-striped" id="TableItem">
                                    <thead>
                                        <tr>
                                            <th style="width: 5%">#</th>
                                            <th style="width: 20%">Deposit Type</th>
                                            <th style="width: 15%">Amount</th>
                                            <th style="width: 10%">Received<br />Amount</th>
                                            <th style="width: 10%">Return<br />Amount</th>
                                            <th style="width: 15%">Due Date</th>
                                            <th style="width: 10%">Receipt<br />Date</th>
                                            <th style="width: 10%">Return<br />Date</th>
                                            <th style="width: 5%"></th>
                                        </tr>
                                    </thead>
                                    <tbody id="TableItemBody">
                                        <tr>
                                            <td colspan="9" class="text-center"><span style="color:red">There are no record to display</span></td>
                                        </tr>
                                    </tbody>

                                </table>
                            </div>

                        </div>


                        <div class="row" style="margin-top: 25px">
                            <div class="col-xs-12 col-md-12">
                                <button type="submit" class="btn btn-success">Save</button>
                                <button type="button" class="btn btn-danger" onclick="backToList()">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    @Html.Partial("_ModalPsm")
</div>

@section Scripts{
    <script type="text/javascript">
        var action = "@action";
    </script>

    <script type="text/javascript" src="~/js/jsfile/Deposit/AddEdit.js"></script>
    
}